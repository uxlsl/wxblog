<!--index.wxml-->
<view wx:for="{{listblog}}" wx:for-index="idx" wx:for-item="item">
  <view class="desc">
    <view class="left">
      <view style="font-size:32rpx;margin:10rpx 0;">{{item.title}}</view>
      <view style="font-size:24rpx;color:darkgray">{{item.meta.meta}}</view>
    </view>
    <view class="right">
      <text style="font-size:24rpx;margin-top:10rpx;color:darkgray">{{item.title}}</text>
    </view>
  </view>
</view>